{
  "name": "Mermaid Previewer",
  "description": "Preview and export mermaid in github/bitbucket.",
  "version": "1.2.7",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/worker/background.js"
  },
  "permissions": [
    "scripting",
    "contextMenus",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "public/html/options.html",
    "default_icon": {
      "128": "public/icon/128.png"
    }
  },
  "icons": {
    "16": "public/icon/128.png",
    "128": "public/icon/128.png"
  }
}
