{
  "name": "Mermaid Previewer",
  "description": "Preview and export mermaid in github/bitbucket.",
  "version": "1.3.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "contextMenus",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "public/html/popup.html",
    "default_icon": {
      "128": "public/icons/128.png"
    }
  },
  "icons": {
    "16": "public/icons/128.png",
    "128": "public/icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "public/webfonts/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
