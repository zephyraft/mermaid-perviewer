{
  "name": "mermaid-previewer",
  "version": "1.3.0",
  "description": "Preview and export mermaid in github/bitbucket.",
  "directories": {
    "test": "test"
  },
  "type": "module",
  "scripts": {
    "dev": "DEBUG=true webpack --mode=production",
    "build": "webpack --mode=production",
    "pack": "pnpm run build; rm release/mermaid-perviewer.zip; cd dist; zip -r -X mermaid-perviewer.zip *; mv mermaid-perviewer.zip ../release/",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zephyraft/mermaid-previewer.git"
  },
  "keywords": [
    "chrome-extension",
    "mermaid"
  ],
  "author": "zephyraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zephyraft/mermaid-perviewer/issues"
  },
  "homepage": "https://github.com/zephyraft/mermaid-perviewer#readme",
  "dependencies": {
    "mermaid": "^10.1.0",
    "toastify-js": "^1.12.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@types/toastify-js": "^1.11.1",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "cypress": "^12.9.0",
    "daisyui": "^2.51.5",
    "eslint": "^8.38.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.2.4",
    "postcss-preset-env": "^8.3.1",
    "robotjs": "^0.6.0",
    "selenium-webdriver": "^4.8.2",
    "style-loader": "^3.3.2",
    "tailwindcss": "^3.3.1",
    "terser-webpack-plugin": "^5.3.7",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1"
  }
}
