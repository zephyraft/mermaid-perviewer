{
  "name": "mermaid-previewer",
  "version": "1.2.8",
  "description": "Preview and export mermaid in github/bitbucket.",
  "directories": {
    "test": "test"
  },
  "type": "module",
  "scripts": {
    "dev": "rollup -c -w --environment DEBUG",
    "build": "rollup -c",
    "pack": "pnpm run build; rm release/mermaid-perviewer.zip; cd dist; zip -r -X mermaid-perviewer.zip *; mv mermaid-perviewer.zip ../release/",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zephyraft/mermaid-previewer.git"
  },
  "keywords": [
    "chrome-extension",
    "mermaid"
  ],
  "author": "zephyraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zephyraft/mermaid-perviewer/issues"
  },
  "homepage": "https://github.com/zephyraft/mermaid-perviewer#readme",
  "dependencies": {
    "mermaid": "^9.1.3",
    "toastify-js": "^1.11.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-strip": "^2.1.0",
    "@tailwindcss/forms": "^0.5.2",
    "autoprefixer": "^10.4.7",
    "cypress": "^4.12.1",
    "daisyui": "^2.18.1",
    "jest": "^26.6.3",
    "postcss": "^8.4.14",
    "prettier": "2.4.1",
    "robotjs": "^0.6.0",
    "rollup": "^2.75.7",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "selenium-webdriver": "^4.3.0",
    "tailwindcss": "^3.1.4"
  }
}
