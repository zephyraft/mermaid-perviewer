{
  "name": "mermaid-previewer",
  "displayName": "Mermaid Previewer",
  "version": "1.4.3",
  "description": "Preview and export mermaid.",
  "scripts": {
    "dev": "plasmo dev --verbose",
    "test": "playwright test",
    "test-ui": "playwright test --ui",
    "test-report": "playwright show-report",
    "build": "plasmo build",
    "package": "plasmo package",
    "gcp-token": "pnpm dlx gcp-refresh-token",
    "dep-outdate": "pnpm outdated"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zephyraft/mermaid-previewer.git"
  },
  "keywords": [
    "chrome-extension",
    "mermaid"
  ],
  "author": "zephyraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zephyraft/mermaid-perviewer/issues"
  },
  "homepage": "https://github.com/zephyraft/mermaid-perviewer#readme",
  "dependencies": {
    "@floating-ui/dom": "^1.5.1",
    "@fluentui/react-components": "^9.27.3",
    "@fluentui/react-icons": "^2.0.209",
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.7.2",
    "mermaid": "^10.3.0",
    "nanoid": "^4.0.2",
    "plasmo": "^0.82.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "^4.0.1",
    "@playwright/test": "^1.36.2",
    "@types/chrome": "^0.0.242",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/webextension-polyfill": "^0.10.1",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.3.1",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "downloads"
    ]
  }
}
