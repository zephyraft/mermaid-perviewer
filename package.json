{
  "name": "mermaid-previewer",
  "version": "1.2.8",
  "description": "Preview and export mermaid in github/bitbucket.",
  "directories": {
    "test": "test"
  },
  "type": "module",
  "scripts": {
    "dev": "rollup -c -w --environment DEBUG",
    "build": "rollup -c",
    "pack": "pnpm run build; rm release/mermaid-perviewer.zip; cd dist; zip -r -X mermaid-perviewer.zip *; mv mermaid-perviewer.zip ../release/",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zephyraft/mermaid-previewer.git"
  },
  "keywords": [
    "chrome-extension",
    "mermaid"
  ],
  "author": "zephyraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zephyraft/mermaid-perviewer/issues"
  },
  "homepage": "https://github.com/zephyraft/mermaid-perviewer#readme",
  "dependencies": {
    "mermaid": "^9.3.0",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-strip": "^3.0.2",
    "@tailwindcss/forms": "^0.5.3",
    "autoprefixer": "^10.4.13",
    "cypress": "^12.0.2",
    "daisyui": "^2.39.0",
    "jest": "^29.3.1",
    "postcss": "^8.4.20",
    "prettier": "2.8.3",
    "robotjs": "^0.6.0",
    "rollup": "^3.8.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "selenium-webdriver": "^4.7.1",
    "tailwindcss": "^3.2.4"
  }
}
